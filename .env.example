# API Keys - Get these from the respective providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
IEX_CLOUD_TOKEN=your_iex_cloud_token_here

# Database Configuration
POSTGRES_DB=trading
POSTGRES_USER=trader
POSTGRES_PASSWORD=secure_password_123

# Trading Configuration - Small Account ($1000)
PAPER_TRADING=true
STARTING_BALANCE=1000
RISK_LIMIT=0.01          # 1% max loss per trade ($10)
MAX_DAILY_RISK=0.02      # 2% max daily loss ($20)
MAX_PORTFOLIO_RISK=0.05  # 5% max drawdown ($50)
MAX_POSITION_SIZE=0.20   # 20% max position ($200)
RESERVE_FUND_PCT=0.20    # 20% emergency reserve ($200)

# Service URLs (internal Docker network)
REDIS_URL=redis://redis:6379
DB_URL=postgresql://trader:secure_password_123@postgres:5432/trading

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=admin123

# Development
NODE_ENV=development